    <meta name="keywords" content="Book Hotel Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />

    <!-- js -->
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <!-- //js -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/Scripts/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
        });
    </script>
    <!-- start-smoth-scrolling -->
</head>
<body>
    <!-- banner -->
    <div class="banner page-head">
        <div class="container">
            <div class="header-nav">
                <div class="logo">
                    <h1><a href="/Home/index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Book Hotel</a></h1>
                </div>
                <div class="navigation">
                    <span class="menu"><img src="~/Images/menu.png" alt="" /></span>
                    <nav class="cl-effect-11" id="cl-effect-11">
                        <ul class="nav1">
                            <li><a class="active" href="/Home/index" data-hover="HOME">HOME</a></li>
                            <li><a href="/Home/about" data-hover="ABOUT">ABOUT</a></li>
                            <li><a href="/Home/typography" data-hover="SERVICES">SERVICES</a></l>
                            <li><a href="/Home/contact" data-hover="CONTACT">CONTACT</a></li>
                            @if (Session["User"] == null)
                            {
                                <li><a href="/Home/login" data-hover="LOGIN">LOGIN</a></li>
                            }
                            else
                            {
                                <li><a href="/Home/login2" data-hover="LOUT">LOUT</a></li>
                                <li class="nav navbar-nav navbar-right" style="color:yellow;">@Session["User"]</li>
                            }

                        </ul>
                    </nav>
                    <!-- script for menu -->
                    <script>
                        $("span.menu").click(function () {
                            $("ul.nav1").slideToggle(300, function () {
                                // Animation complete.
                            });
                        });
                    </script>
                    <!-- //script for menu -->

                </div>
                <div class="social-icons">
                    <ul>
                        <li><a href="http://www.facebook.com/Book-Hotel-135505630191648/?skip_nax_wizard=true" class="f1"></a></li>
                        <li><a href="http://twitter.com/book_hotel7" class="f2"></a></li>
                        <li><a href="http://gmail.com" class="f3"></a></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <br /><br />

    <div style="text-align:center">

        <h1><b>BOOKINGS</b></h1><br /><br />

        <table border="1" cellpadding="2" align="center">
            <tr>
                <td><h3 align="center"><b>Name</b></h3></td>
                <td><h3 align="center"><b>Email</b></h3></td>
                <td><h3 align="center"><b>Contact</b></h3></td>
                <td><h3 align="center"><b>City</b></h3></td>
                <td><h3 align="center"><b>Hotel</b></h3></td>
                <td><h3 align="center"><b>Booking Date</b></h3></td>
                <td><h3 align="center"><b>Reserve Date</b></h3></td>
                <td><h3 align="center"><b>Arrival Date</b></h3></td>
                <td><h3 align="center"><b>Booking Type</b></h3></td>
                <td><h3 align="center"><b>Members</b></h3></td>
                <td><h3 align="center"><b>Cancel</b></h3></td>
            </tr>
                    
                    @for (int j = 0; j < ViewBag.Contact.Count; j++)
                    { 
                        for (int k = 0; k < ViewBag.Booking.Count; k++)
                        {
                            if (ViewBag.Booking[k].Id == ViewBag.Contact[j].B_Id)
                            {
                                for(int l = 0; l < ViewBag.Hotel.Count; l++)
                                {
                                    if (ViewBag.Booking[k].H_Id == ViewBag.Hotel[l].Id)
                                    {
                                        for(int m = 0; m < ViewBag.City.Count; m++)
                                        {
                                            if (ViewBag.Booking[k].C_Id == ViewBag.City[m].Id)
                                            {
                                                <tr>
                                                <td>@ViewBag.Contact[j].Name</td>
                                                <td>@ViewBag.Contact[j].Email</td>
                                                <td>@ViewBag.Contact[j].Telephone</td>
                                                <td>@ViewBag.City[m].Name</td>
                                                <td>@ViewBag.Hotel[l].Name</td>
                                                <td>@ViewBag.Booking[k].Booking_Date</td>
                                                <td>@ViewBag.Booking[k].CheckIn_Date</td>
                                                <td>@ViewBag.Booking[k].CheckOut_Date</td>
                                                <td>@ViewBag.Booking[k].Booking_Type</td>
                                                <td>@ViewBag.Booking[k].Member_Capacity</td>
                                                <td><a href="/Home/Delete3/@ViewBag.Contact[j].Id">Delete</a></td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                    
                    
                                             
            
          

        </table>
        <br/><br/>

        <form action="/Home/index">
            <input type="submit" value="Go Back" />
        </form><br/><br/>
        </div>

        <div class="footer">
            <div class="container">
                <div class="col-md-3 ftr_navi ftr">
                    <h3>NAVIGATION</h3>
                    <ul>
                        <li><a href="/Home/index">Home</a></li>
                        <li><a href="/Home/about">About</a></li>
                        <li><a href="/Home/typography">Services</a></li>
                        <li><a href="/Home/booking">Booking</a></li>
                        <li><a href="/Home/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3 ftr_navi ftr">
                    <h3>FACILITIES</h3>
                    <ul>
                        <li><a href="#">Double bedrooms</a></li>
                        <li><a href="#">Single bedrooms</a></li>
                        <li><a href="#">Royal facilities</a></li>
                        <li><a href="#">Halls</a></li>
                    </ul>
                </div>
                <div class="col-md-3 ftr_navi ftr">
                    <h3>GET IN TOUCH</h3>
                    <ul>
                        <li>hotelbook7@gmail.com</li>
                        <li>+92 324-6482400</li>

                    </ul>
                </div>
                <div class="col-md-3 ftr-logo">
                    <a href="/Home/index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Book Hotel</a>
                    <ul>
                        <li><a href="http://www.facebook.com/Book-Hotel-135505630191648/?skip_nax_wizard=true" class="f1"></a></li>
                        <li><a href="http://twitter.com/book_hotel7" class="f2"></a></li>
                        <li><a href="http://gmail.com" class="f3"></a></li>
                    </ul>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
